    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "pipenv run fbs run ",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "compile ui",
            "type": "shell",
            "command": "python ${workspaceFolder}/src/build/ui/compile.py ${workspaceFolder}/src/build/ui ${workspaceFolder}/src/main/python/ui",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "compile and run",
            "type": "shell",
            "dependsOn": [
                "compile ui",
                "run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
